{
    "manifest_version": 3,
    "name": "WaitMate",
    "version": "1.0",
    "icons": {
        "64": "res/icon64.png"
    },

    "background": {
        "service_worker": "script/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "script/timer.js"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "windows",
        "activeTab",
        "webNavigation",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}