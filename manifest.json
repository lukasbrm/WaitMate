{
    "manifest_version": 3,
    "name": "WaitMate",
    "version": "1.0",
    "icons": {
        "64": "res/icon64.png"
    },

    "background": {
        "service_worker": "script/service-worker.js",
        "type": "module"
    },

    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "windows"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}